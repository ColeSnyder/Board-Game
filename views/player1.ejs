<!DOCTYPE html>
<html>
  <head>
    <title>Board Game</title>
    <link rel='stylesheet' href='/stylesheets/app.css' type="text/css"/>
    <link rel="icon" href="icon.png">

  </head>
  <body>

    <header>
      <h2>THE BROGRAMMERS BOARD GAME</h2>
      <h2 class="playerIndicator">Player 1</h2>
    </header>

<main>
    <div class="grid-container1">
      <div class="grid-item">
        <div id="stats">

            <div id="users-numbers">
              <p> Player 1 numbers: </p>
              <p id="numbers"> {}</p>
            </div>

            <div id="selected-num">
              <p id="current-player"> Player <u>X</u> selected: </p>
              <p id="current-num"> X </p>
            </div>
            <div id="wins">
              <hr>
              <h2>Scoreboard</h2>
              <div id="match-number">
                  <p> Match number:</p>
                  <p> <strong>X</strong> </p>
              </div>

              <p id="p1Wins"> Player 1 wins: X</p>
              <p id="p2wins"> Player 2 wins: X</p>
              <p id="p3Wins"> Player 3 wins: X</p>
              <p id="p4wins"> Player 4 wins: X</p>
            </div>

        </div>
      </div>
      <div class="grid-item">

            <div class="grid-container">
              <div class="odd"></div>
              <div class="even"></div>
              <div class="odd"></div>
              <div class="even"></div>

              <div class="even"></div>
              <div class="odd"></div>
              <div class="even"></div>
              <div class="odd"></div>

              <div class="odd"></div>
              <div class="even"></div>
              <div class="odd"></div>
              <div class="even"></div>

              <div class="even"></div>
              <div class="odd"></div>
              <div class="even"></div>
              <div class="odd"></div>
            </div>

      </div>
      <div class="grid-item">

        <div class="number-grid">
          <div class="playerNumbers" id="one">1</div>
          <div class="playerNumbers" id="two">2</div>
          <div class="playerNumbers" id="three">3</div>
          <div class="playerNumbers" id="four">4</div>
          <div class="playerNumbers" id="five">5</div>
          <div class="playerNumbers" id="six">6</div>
          <div class="playerNumbers" id="seven">7</div>
          <div class="playerNumbers" id="eight">8</div>
          <div class="playerNumbers" id="nine">9</div>

          <div class="playerNumbers" id="ten">10</div>
          <div class="playerNumbers" id="eleven">11</div>
          <div class="playerNumbers" id="twelve">12</div>
          <div class="playerNumbers" id="thirteen">13</div>
          <div class="playerNumbers" id="fourteen">14</div>
          <div class="playerNumbers" id="fifteen">15</div>
          <div class="playerNumbers" id="sixteen">16</div>
          <div class="playerNumbers" id="seventeen">17</div>
          <div class="playerNumbers" id="eighteen">18</div>
          <div class="playerNumbers" id="nineteen">19</div>
          <div class="playerNumbers" id="twenty">20</div>
        </div>

      </div>

    </div>
  </main>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="data.js"></script>
  </body>
</html>
